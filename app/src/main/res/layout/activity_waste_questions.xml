<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeScreen.rewards.WasteQuestionsActivity"
    android:background="@color/dark_blue"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/categoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz category name"
        android:textColor="@color/grey2"
        android:textSize="16dp" />

    <RelativeLayout
        android:id="@+id/mathQuestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/categoryTitle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Questions"
            android:textSize="24dp"
            android:textColor="@color/grey"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/questionCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="01/10"
            android:textColor="@color/grey"
            android:textSize="18dp" />

    </RelativeLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mathQuestions"
        android:layout_marginTop="15dp"
        app:indicatorColor="@color/grey" />

    <androidx.cardview.widget.CardView
        android:id="@+id/mathematicsCardView"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/progressHorizontal">

        <TextView
            android:id="@+id/questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quiz questions..."
            android:textColor="@color/black1"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="15dp"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/mathematicsAnswers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mathematicsCardView"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/option_unselect"
            android:onClick="onClickNextQuestion"
            android:padding="15dp"
            android:text="Answer 1"
            android:textColor="@color/grey"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/option_unselect"
            android:onClick="onClickNextQuestion"
            android:padding="15dp"
            android:text="Answer 2"
            android:textColor="@color/grey"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/option_unselect"
            android:onClick="onClickNextQuestion"
            android:padding="15dp"
            android:text="Answer 3"
            android:textColor="@color/grey"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/option_unselect"
            android:onClick="onClickNextQuestion"
            android:padding="15dp"
            android:text="Answer 4"
            android:textColor="@color/grey"
            android:textSize="16dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mathematicsAnswers"
        android:layout_marginTop="50dp"
        android:padding="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonContinue"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/quiz_button"
            android:onClick="onClickNextQuestion"
            android:padding="15dp"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonQuit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="2dp"
            android:padding="15dp"
            android:text="Quit Quiz"
            android:textAllCaps="false"
            android:textColor="@color/grey1"
            android:textSize="16dp" />

    </RelativeLayout>

</RelativeLayout>